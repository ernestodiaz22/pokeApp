<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".equipo_pokemon">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="16dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/fondo_info_entrenador"
                    android:layout_marginTop="80dp"
                    android:paddingVertical="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="200dp"
                        android:background="@drawable/fondo_equipo_pokemon"
                        android:layout_gravity="center_horizontal"
                        android:padding="25dp"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/imageView13"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                app:srcCompat="@drawable/charizar_pixel_icon" />

                            <ImageView
                                android:id="@+id/imageView14"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="end"
                                android:layout_marginHorizontal="20dp"
                                android:layout_marginVertical="45dp"
                                app:srcCompat="@drawable/male_icon" />

                            <TextView
                                android:id="@+id/textView54"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:layout_marginVertical="45dp"
                                android:layout_marginLeft="20dp"
                                android:layout_gravity="center_horizontal"
                                android:textSize="24sp"
                                android:text="Charizard" />

                            <TextView
                                android:id="@+id/textView55"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="45dp"
                                android:textColor="@color/white"
                                android:layout_marginLeft="20dp"
                                android:textSize="16sp"
                                android:text="HP" />

                            <TextView
                                android:id="@+id/textView56"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="HP" />
                            <View
                                android:layout_width="100dp"
                                android:layout_height="5dp"
                                android:layout_gravity="center"
                                android:background="@drawable/barra_hp"/>

                            <TextView
                                android:id="@+id/textView57"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="TextView" />
                        </FrameLayout>
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>
            <TextView
                android:id="@+id/textView53"
                android:layout_marginTop="50dp"
                android:textSize="24sp"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/fondo_info_entrenador"
                android:text="BLUE TEAM" />
        </FrameLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>