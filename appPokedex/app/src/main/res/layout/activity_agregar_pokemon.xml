<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AgregarPokemonActivity">

    <!-- Número de la Pokédex -->
    <EditText
        android:id="@+id/editTextNumPokedex"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Número de la Pokédex"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Nombre del Pokémon -->
    <EditText
        android:id="@+id/editTextNombre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nombre del Pokémon"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/editTextNumPokedex"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Tipo 1 -->
    <EditText
        android:id="@+id/editTextTipo1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Tipo 1"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/editTextNombre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Tipo 2 -->
    <EditText
        android:id="@+id/editTextTipo2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Tipo 2 (opcional)"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/editTextTipo1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- URL de la Imagen -->
    <EditText
        android:id="@+id/editTextImagen"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="URL de la imagen"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/editTextTipo2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón Guardar -->
    <Button
        android:id="@+id/buttonSavePokemon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar Pokémon"
        android:textColor="@color/white"
        android:backgroundTint="@color/menu_blue_light"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/editTextImagen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:onClick="onSavePokemonClick" />  <!-- Aquí se configura el onClick -->

</androidx.constraintlayout.widget.ConstraintLayout>
